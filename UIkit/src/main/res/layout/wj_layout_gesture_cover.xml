<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- volume-->
    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/wj_cover_player_gesture_operation_volume_box"
        android:layout_width="42dp"
        android:layout_height="85dp"
        android:background="@drawable/wj_shape_gray"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/wj_cover_player_gesture_operation_volume_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="11dp" />
        <com.wj.uikit.view.VolumeProgressView
            android:id="@+id/vp"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <ImageView
                android:id="@+id/wj_cover_player_gesture_operation_volume_icon"
                android:layout_width="11dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@mipmap/wj_video_volume" />
        </com.wj.uikit.view.VolumeProgressView>
    </LinearLayout>
</FrameLayout>