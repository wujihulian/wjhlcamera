<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6F6F6"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="19dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:src="@mipmap/wj_uikit_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="为设备配置有线网络"
            android:textColor="#FF333333"
            android:textSize="17dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FFF6F6F6">

            <TextView
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="IPV4地址"
                android:textColor="#333333"
                android:textSize="13dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_ip"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textColor="#FF333333"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="配置IP"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:alpha="0.1"
                android:background="#999999" />

            <TextView
                android:id="@+id/tv_ip"
                android:layout_marginRight="20dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动"
                android:textColor="#999999"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:src="@mipmap/wj_device_right" />
        </FrameLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/fl_ip_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textColor="#FF333333"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:gravity="center_vertical"
                    android:text="IP地址"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.1"
                    android:background="#999999" />


                <EditText
                    android:id="@+id/et_ip4"
                    android:inputType="numberSigned"
                    android:maxLength="15"
                    android:digits="0123456789."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:textColor="#999999"
                    android:textSize="12dp" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textColor="#FF333333"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:gravity="center_vertical"
                    android:text="子网掩码"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.1"
                    android:background="#999999" />


                <EditText
                    android:id="@+id/et_subnet_mask"
                    android:inputType="numberSigned"
                    android:maxLength="15"
                    android:digits="0123456789."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:textColor="#999999"
                    android:textSize="12dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textColor="#FF333333"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:gravity="center_vertical"
                    android:text="默认网关"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.1"
                    android:background="#999999" />


                <EditText
                    android:id="@+id/et_default_gateway"
                    android:inputType="numberSigned"
                    android:maxLength="15"
                    android:digits="0123456789."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:textColor="#999999"
                    android:textSize="12dp" />
            </FrameLayout>
        </LinearLayout>




        <LinearLayout
            android:visibility="gone"
            android:id="@+id/fl_dns_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#FFF6F6F6">

                <TextView
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="DNS服务"
                    android:textColor="#333333"
                    android:textSize="13dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textColor="#FF333333"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:gravity="center_vertical"
                    android:text="首选"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.1"
                    android:background="#999999" />


                <EditText
                    android:id="@+id/et_dns_primary"
                    android:inputType="numberSigned"
                    android:maxLength="15"
                    android:digits="0123456789."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:textColor="#999999"
                    android:textSize="12dp" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textColor="#FF333333"

                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:gravity="center_vertical"
                    android:text="备用"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.1"
                    android:background="#999999" />


                <EditText
                    android:id="@+id/et_dns_secondary"
                    android:inputType="numberSigned"
                    android:maxLength="15"
                    android:digits="0123456789."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:textColor="#999999"
                    android:textSize="12dp" />
            </FrameLayout>





        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_wired"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/wj_angle_blue_4"
        android:gravity="center"
        android:text="开始配网"
        android:textColor="#ffffff"
        android:textSize="15dp" />

</FrameLayout>